<div class="chat-box" id='<%= chat.user_id %>'>
  <div class="chat-area">

    <% if chat.user_id == (session[:user_id] || current_user) %>
      <div class="time-id-info-mine">
        <p><%= "#{chat.user_name} #{simple_time(chat.created_at)}" %></p>
      </div>
      <div class="chat-balloon-line-mine">
        <div class="chat-balloon-mine">
          <pre id="msg_id"><%= chat.content %></pre>
        </div>
      </div>
    <% else %>
      <div class="time-id-info">
        <p><%= "#{chat.user_name} #{simple_time(chat.created_at)}" %></p>
      </div>
      <div class="chat-balloon-line">
        <div class="chat-balloon">
          <pre id="msg_id"><%= chat.content %></pre>
        </div>
      </div>
    <% end %>

  </div>
</div>