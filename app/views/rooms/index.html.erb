<% provide(:title, "ROOM Select") %>

<div class="main-page-select">
  <div class="over-scroll">
    <div class="user-name">
      <div class="user-name-value"><p>NAMEï¼š <%= @user.name %></p></div>
        <div class="search-button">
          <%= link_to "CHANGE", edit_user_path(@user.id), class: 'link-none', id: 'user_edit' %>
        </div>
    </div>
    <div class="room-search">
      <form>
        <%= form_tag rooms_path, method: 'get' do %>
          <div class="form-label"><p>ROOM SEARCH</p></div>
          <%= text_field_tag :search, params[:search], class: "text-input-form" %>
          <%= submit_tag "SEARCH", name: nil, class: "search-button link-none" %>
        <% end %>
          <div class="search-button">
            <%= link_to "CREATE", new_room_path, class: 'link-none' %>
          </div>
          <div class="search-button">
            <%= link_to "RANDOM TALK", chat_rooms_path, class: 'link-none' %>
          </div>
          <div class="search-button">
          <%= link_to "ARTICLES", articles_path, class: 'link-none' %>
          </div>
      </form>
    </div>

    <div class="room-content">
      <div class="room-content-title"><p><%= @room_heading %></p></div>
      <div class="active-room">
        <%= render @rooms %>
      </div>
    </div>
  </div>
</div>