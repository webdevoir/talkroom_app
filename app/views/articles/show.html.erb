<% provide(:title, "Article") %>
<div class="main-view">
    <div id="chat-scroll" class="messages">
        <div id="messages", data-room_id="<%= @article.id %>" class="chat-view-area">
            <%= render @article_messages %>
        </div>
    </div>

    <div class="nav">
        <div class="back-button">
            <%= link_to articles_path do %>
                <p>Back</p>
            <% end %>
        </div>
        <div class="room-title"><p><%= @article.title %></p></div>
        <div class="menu-button">
            <%= link_to controller: "articles", action: "like", article_id: @article.id do %>
                <p>LIKE</p>
            <% end %>
        </div>
    </div>
    <div class="down-button" id="down_button">
        <p>â¬‡</p>
    </div>
</div>